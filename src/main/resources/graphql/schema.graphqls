

type Query {
    getAllArticles: [Article!]
    getArticleById(id: String!): Article
    getArticlesByDate(from: String!, to: String!): [Article!]
    getCategories: [Category]
}

input ArticleInput {
    title: String!
    summary: String!
    content: String!
    imageUrl: String!
    categories: [String]
    isPublished: Boolean!
}

type Mutation {
    createArticle(input: ArticleInput!): Article!
}

type Article {
    id: String
    title: String
    summary: String
    content: String
    imageUrl: String
    date: String
    categories: [String]
    isPublished: Boolean
}

type Category {
    id: String
    name: String
}







